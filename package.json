{
	"name": "@blazor/monorepo",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"engines": {
		"node": ">=24.12.0"
	},
	"scripts": {
		"js": "pnpm -r run js",
		"js-dev": "pnpm -r --parallel run js-dev",
		"css": "pnpm --filter @blazor/css css",
		"build": "pnpm css && pnpm js",
		"dist": "pnpm css && pnpm js && pnpm --filter @blazor/js js-dist",
		"publish-assets": "pnpm dist && cd dist && npm publish"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.7.3",
		"@blazor/css": "workspace:*",
		"@blazor/js": "workspace:*",
		"@microsoft/dotnet-js-interop": "^10.0.0",
		"@prettier/plugin-xml": "^3.4.2",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@types/node": "^25.0.3",
		"autoprefixer": "^10.4.23",
		"cpy-cli": "^6.0.0",
		"cross-env": "^10.1.0",
		"cssnano": "^7.1.2",
		"eslint": "^9.39.2",
		"eslint-parser-plain": "^0.1.1",
		"eslint-plugin-format": "^1.1.0",
		"eslint-plugin-jsonc": "^2.21.0",
		"jiti": "^2.6.1",
		"markdownlint": "^0.40.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"rollup": "^4.54.0",
		"rollup-plugin-esbuild": "^6.2.1",
		"rtlcss": "^4.3.0",
		"sass": "^1.97.1",
		"stylelint": "^16.26.1",
		"stylelint-config-twbs-bootstrap": "^16.1.0",
		"stylelint-scss": "^6.13.0",
		"tiny-glob": "^0.2.9",
		"typescript": "^5.9.3"
	}
}
